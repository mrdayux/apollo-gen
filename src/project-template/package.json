        "@types/lodash": "^4.14.117",
        "@types/mysql": "^2.15.5",
        "@types/node": "^8.10.36",
        "@types/raven": "^2.5.1",
        "@types/supertest": "^2.0.6",
        "apollo-gen": "^0.1.12",
        "chai": "^4.2.0",
        "concurrently": "^4.0.1",
        "jest": "^23.6.0",
        "nodemon": "^1.18.4",
        "shx": "^0.3.2",
